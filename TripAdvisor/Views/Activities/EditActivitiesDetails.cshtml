@{
  Layout = "_Layout";
}

<div class="bg-panel">
  <h1><a href="/Cities/@Model["City"].GetId()">@Model["City"].GetName()</a></h1>
  <h2>@Model["Activity"].GetName()</h2>
  <h2>Description: @Model["Activity"].GetDescription()</h2>
  </br>

  <ul class="no-bullet">


<form class="" action="/Activities/@Model["Activity"].GetId()/edit/new" method="post">

    <label for="new-name">Edit Activity Name:</label>
    <input type="text" name="new-name" required>

    <label for="new-description">Enter/Add Activity Description:</label>
    <input type="text" name="new-description" required>
    <button type="submit">ADD</button>
  </form>


  </ul>
</div>
