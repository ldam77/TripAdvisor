@{
  Layout = "_Layout";
}

<div class="bg-panel">
  <h1>Activities List</h1>

  @if (Model.Count == 0)
  {
    <h3>No record found</h3>
  }

  <ul class="no-bullet">
    @foreach (var activity in Model)
    {
      <li><a href="/Activities/@activity.GetId()/edit">@activity.GetName()</a></li>
    }
  </ul>
</div>
