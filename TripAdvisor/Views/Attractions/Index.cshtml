@{
  Layout = "_Layout";
}

<div class="bg-panel">
  <h1>Attraction List</h1>

    @if (Model.Count == 0)
    {
      <h3>No record found</h3>
    }

  <ul class="no-bullet">
    @foreach (var attraction in Model)
    {
      <li><a href="/Attractions/@attraction.GetId()">@attraction.GetName()</a></li>
    }
  </ul>
</div>
